#!/bin/bash

echo "--------------------------------"
echo "Welcome $(whoami)"
echo "--------------------------------"

echo "Date and Time:"
date

echo ""
echo "System Uptime:"
uptime

echo ""
echo "Last Login:"
last | head -n 2

echo ""
echo "Disk Space:"
df -h

echo ""
echo "RAM Usage:"
free -h

echo ""
echo "Running Processes:"
ps aux | head

